{
  "name": "@yvog/ukelele-gitaarles-v2",
  "version": "1.0.0",
  "description": "Ukelele-Gitaarles official website v2.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "codegen": "graphql-codegen --require dotenv/config --config codegen.ts",
    "build": "npm run codegen && next build && npm run gen:sitemap",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,json,scss,css}\" ",
    "cleanup": "rimraf node_modules",
    "gen:sitemap": "next-sitemap --config sitemap.config.js",
    "prod:cleanup": "rm -rf package-lock.json ./public/sitemap.js",
    "prod:server": "next start ./ -p 8080",
    "prod:start": "npx pm2 start npm --name ukelele-gitaarles -- run prod:server",
    "prod:stop": "npx pm2 stop ukelele-gitaarles"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yvog/ukelele-gitaarles-v2.git"
  },
  "author": "Yvo Geldhof",
  "bugs": {
    "url": "https://github.com/yvog/ukelele-gitaarles-v2/issues"
  },
  "dependencies": {
    "@graphql-codegen/cli": "^5.0.2",
    "@graphql-codegen/client-preset": "^4.2.2",
    "@sendgrid/mail": "^7.4.2",
    "@vercel/node": "^1.12.1",
    "graphql": "^16.8.1",
    "graphql-request": "^6.1.0",
    "next": "^12.0.7",
    "next-images": "^1.8.4",
    "swiper": "^11.0.6"
  },
  "devDependencies": {
    "@parcel/watcher": "^2.4.0",
    "@rjsf/core": "^2.5.1",
    "@types/classnames": "^2.3.1",
    "@types/node": "^14.11.8",
    "@types/react": "^17.0.38",
    "@types/react-jsonschema-form": "^1.7.4",
    "classnames": "^2.3.1",
    "dotenv": "^16.4.2",
    "eslint": "8.9.0",
    "eslint-config-next": "12.1.0",
    "eslint-config-prettier": "^8.4.0",
    "imagemin": "^7.0.1",
    "imagemin-webp": "^6.0.0",
    "next-sitemap": "^1.5.18",
    "prettier": "^2.5.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-markdown": "^5.0.3",
    "react-spinners": "^0.13.8",
    "sass": "^1.26.11",
    "sharp": "^0.27.2",
    "typescript": "^4.3.2"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "printWidth": 80
  },
  "browserslist": [
    "last 2 versions",
    "> 1%",
    "not dead"
  ]
}
